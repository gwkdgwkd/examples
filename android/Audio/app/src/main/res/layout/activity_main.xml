<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenSl/ES"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="82dp" />

    <Button
        android:id="@+id/start_play_pcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StratPlayPcm"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/stop_play_pcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="StopPlayPcm"
        app:layout_constraintTop_toBottomOf="@+id/start_play_pcm"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/start_recorder_pcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="StratRecorderPcm"
        app:layout_constraintTop_toBottomOf="@+id/stop_play_pcm"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/stop_recorder_pcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="StopRecorderPcm"
        app:layout_constraintTop_toBottomOf="@+id/start_recorder_pcm"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="AudioTrack"
        app:layout_constraintTop_toBottomOf="@+id/stop_recorder_pcm"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>